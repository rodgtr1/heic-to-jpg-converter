{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HEIC Converter",
  "version": "1.0.0",
  "identifier": "com.heicconverter.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "HEIC Converter",
        "width": 600,
        "height": 500,
        "resizable": true,
        "minWidth": 400,
        "minHeight": 300
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "category": "Graphics and Design",
    "longDescription": "A fast and simple desktop application for converting HEIC/HEIF images to high-quality JPEG format. Features batch processing, progress tracking, and an intuitive interface.",
    "shortDescription": "Convert HEIC images to JPEG format"
  }
}
